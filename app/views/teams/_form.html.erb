<%= form_for @team do |f| %>
  <%= f.hidden_field :season_id %>
  <label class="team_label"><%= f.label :name %></label>
  <%= f.text_field :name, :size => 64 %><br />
  <label class="team_label"><%= f.label :number %></label>
  <%= f.number_field :number %><br />
  <label class="team_label"><%= f.label :clean_up_week_number %></label>
  <%= f.number_field :clean_up_week_number %><br />
  <label class="team_label"><%= f.label :description %></label>
  <%= f.text_area :description, :cols => 47, :rows => 20 %><br />

  <%= f.submit :id => "commit" %>
<% end %>