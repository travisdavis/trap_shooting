<h1 class="header"><%= @team.name %> Shooters</h1>

<div>
  <%= link_to 'Seasons', seasons_path() %> &gt;
  <%= link_to 'Teams', season_teams_path(:season_id => @team.season_id) %>
</div><br/>

<div id="shooters">
<% if @shooters.count == 0 %>
  <div id="no_items_message">To add a shooter using the form below.</div>
<% else %>
  <table class="table table-condensed">
    <tr>
      <th>Actions</th>
      <th>Name</th>
      <th>Position</th>
      <th>Handicap Yardage</th>
    </tr>
    <% @shooters.each do |shooter| %>
    <tr id="shooter_<%= shooter.id%>" class='<%= cycle('list_line_odd', 'list_line_even')%>'>
      <td class="actions">
        <% if @season.matches.count == 0 %>
        <%= link_to 'Delete', shooter, :method => 'delete', :confirm => 'Are you sure you want to delete this shooter?' %> |
        <% end %>
        <%= link_to 'Edit', edit_shooter_path(shooter) %>
      </td>
      <td><%= shooter.name %></td>
      <td><%= shooter.position %></td>
      <td><%= shooter.casper == true ? 'n/a' : shooter.handicap_yardage %></td>
    </tr>
    <% end %>
  </table>
<% end %>
</div>

<% if @team.shooters.count < 5 %>
<div id="create_form" style="display: none;">
  <%= render 'form' %>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $("#create_form").hide();
    $("h1.header").html($("h1.header").html()+" <a href='#' id='add_item_link'>add</a>");
    $("#create_form form").html($("#create_form form").html()+" <button id='cancel'>Cancel</button>");

    $("#add_item_link").click(function() {
      $("#shooters").hide();
      $("#create_form").show();
      $(this).hide();
    });
    $("#cancel").click(function(event) {
      event.preventDefault();
      $("#shooters").show();
      $("#create_form").hide();
      $("#add_item_link").show();
    });
    $("#no_items_message").html("Click <b>add</b> above to add shooters.");
  });
</script>
<% end %>
